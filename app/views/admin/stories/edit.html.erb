<%# app/views/admin/stories/edit.html.erb - VERSION CORRIGÉE %>

<div class="admin-wrap">
  <div class="admin-header">
    <%= link_to "← Retour à la liste", admin_stories_path, class: "back-link" %>
    <h1>✏️ Éditer la story #<%= @story.id %></h1>
    <p class="story-title-preview"><%= @story.title %></p>
  </div>

  <%= render "form" %>
</div>

<style>
.admin-wrap {
  max-width: 1400px;
  margin: 0 auto;
  padding: 24px;
}

.admin-header {
  margin-bottom: 32px;
  padding-bottom: 24px;
  border-bottom: 2px solid #e5e7eb;
}

.back-link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  color: #64748b;
  text-decoration: none;
  font-weight: 600;
  font-size: 14px;
  margin-bottom: 16px;
  transition: color 0.2s;
}

.back-link:hover {
  color: #a855f7;
}

.admin-header h1 {
  font-size: 32px;
  font-weight: 900;
  color: #0f172a;
  margin: 0 0 12px 0;
}

.story-title-preview {
  color: #64748b;
  font-size: 16px;
  font-style: italic;
  margin: 0;
}
</style>
