<%# app/views/opportunities/new.html.erb %>

<div class="bg-gray-50 min-h-screen font-sans text-slate-800">
  <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-10">

    <div class="mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-extrabold tracking-tight text-slate-900 font-epilogue">
          Proposer une opportunit√©
        </h1>
        <p class="mt-2 text-slate-600">
          Partagez une initiative locale. Elle sera relue par l'√©quipe avant publication.
        </p>
      </div>
      <%= link_to "‚Üê Annuler", opportunities_path, class: "text-sm font-semibold text-slate-500 hover:text-slate-800 transition-colors" %>
    </div>

    <% if @opportunity.errors.any? %>
      <div class="rounded-xl border border-red-200 bg-red-50 p-4 mb-8">
        <div class="flex">
          <div class="shrink-0 text-red-400">‚ö†Ô∏è</div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              Merci de corriger les <%= pluralize(@opportunity.errors.count, "erreur") %> :
            </h3>
            <ul class="mt-2 list-disc list-inside text-sm text-red-700">
              <% @opportunity.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
      <div class="lg:col-span-2">
        <%= form_with model: @opportunity, local: true, class: "space-y-8 bg-white p-8 rounded-3xl shadow-sm border border-slate-200" do |f| %>

          <div class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= f.label :title, "Titre de l'opportunit√©", class: "block text-sm font-bold text-slate-700 mb-1" %>
                <%= f.text_field :title, placeholder: "Ex: Atelier compostage urbain", class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" %>
              </div>
              <div>
                <%= f.label :category, "Cat√©gorie", class: "block text-sm font-bold text-slate-700 mb-1" %>
                <%= f.select :category,
                    [["ü§ù B√©n√©volat", "benevolat"], ["üéì Formation", "formation"], ["üëã Rencontres", "rencontres"], ["üöÄ Entreprendre", "entreprendre"], ["üå± √âcologiser", "ecologiser"]],
                    { include_blank: "Choisir..." },
                    { class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" } %>
              </div>
            </div>

            <div>
              <%= f.label :description, "Description d√©taill√©e", class: "block text-sm font-bold text-slate-700 mb-1" %>
              <%= f.text_area :description, rows: 6, placeholder: "Expliquez en quoi consiste cette opportunit√©...", class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" %>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= f.label :organization, "Structure / Organisateur", class: "block text-sm font-bold text-slate-700 mb-1" %>
                <%= f.text_field :organization, placeholder: "Nom de l'asso, du collectif...", class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" %>
              </div>
              <div>
                <%= f.label :location, "Lieu (Ville ou Adresse)", class: "block text-sm font-bold text-slate-700 mb-1" %>
                <%= f.text_field :location, placeholder: "Ex: Nancy, Plateau de Haye", class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" %>
              </div>
            </div>

            <div class="field">
              <%= f.label :photos, "Ajouter des photos", class: "block text-sm font-bold text-slate-700 mb-1" %>
              <%= f.file_field :photos, multiple: true, id: "photo-upload-input", class: "block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-violet-50 file:text-violet-700 hover:file:bg-violet-100" %>

              <%# Zone de pr√©visualisation ajout√©e %>
              <div id="image-preview-zone" class="mt-4 flex flex-wrap gap-2"></div>
            </div>

            <div>
              <%= f.label :contact_email, "Votre email de contact", class: "block text-sm font-bold text-slate-700 mb-1" %>
              <%= f.email_field :contact_email, placeholder: "Pour vous recontacter si besoin", class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" %>
            </div>
          </div>

          <div class="pt-6 border-t border-slate-100">
            <%= f.submit "Valider et envoyer √† D√©clic", class: "w-full flex justify-center py-4 px-6 border border-transparent rounded-full shadow-lg text-lg font-bold text-white bg-gradient-to-r from-violet-600 to-indigo-600 hover:from-violet-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500 transition-all transform hover:-translate-y-1" %>
          </div>
        <% end %>
      </div>

      <aside class="space-y-6">
        <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 mb-6">
          <h2 class="font-bold text-slate-900 flex items-center gap-2">
            <span class="text-xl">üí°</span> Conseils
          </h2>
          <ul class="mt-4 text-sm text-slate-600 space-y-3">
            <li class="flex gap-2">
              <span class="text-violet-500 font-bold">‚Ä¢</span>
              <span>Soyez pr√©cis sur le lieu et les horaires.</span>
            </li>
            <li class="flex gap-2">
              <span class="text-violet-500 font-bold">‚Ä¢</span>
              <span>Ajoutez un lien vers un site officiel ou une billetterie.</span>
            </li>
            <li class="flex gap-2">
              <span class="text-violet-500 font-bold">‚Ä¢</span>
              <span>Choisissez une belle image, c'est ce qui attire l'≈ìil en premier !</span>
            </li>
          </ul>
        </div>

        <div class="bg-gradient-to-br from-indigo-50 to-violet-50 rounded-2xl border border-indigo-100 p-6">
          <h3 class="font-bold text-indigo-900 text-sm uppercase tracking-wide mb-2">Mod√©ration</h3>
          <p class="text-sm text-indigo-800/80 leading-relaxed">
            Les contenus √† caract√®re politique, purement commercial ou contraires √† la loi ne seront pas publi√©s. Nous nous r√©servons le droit d'ajuster la mise en forme.
          </p>
        </div>
      </aside>
    </div>
  </main>
</div>

<script>
  document.addEventListener('change', function(e) {
    if (e.target && e.target.id === 'photo-upload-input') {
      const zone = document.getElementById('image-preview-zone');
      zone.innerHTML = '';
      Array.from(e.target.files).forEach(file => {
        const reader = new FileReader();
        reader.onload = function(event) {
          const img = document.createElement('img');
          img.src = event.target.result;
          img.className = "h-20 w-20 object-cover rounded-lg border border-slate-200 shadow-sm";
          zone.appendChild(img);
        }
        reader.readAsDataURL(file);
      });
    }
  });
</script>
