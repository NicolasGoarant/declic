<%# Script compression images %>
<script>
  let allFiles = [];

  function compressImage(file, maxWidth = 1920, quality = 0.85) {
    return new Promise((resolve) => {
      if (!file.type.startsWith('image/')) {
        resolve(file);
        return;
      }

      const reader = new FileReader();
      reader.onload = function(e) {
        const img = new Image();
        img.onload = function() {
          const canvas = document.createElement('canvas');
          let width = img.width;
          let height = img.height;

          if (width > maxWidth) {
            height = (height * maxWidth) / width;
            width = maxWidth;
          }

          canvas.width = width;
          canvas.height = height;
          const ctx = canvas.getContext('2d');
          ctx.drawImage(img, 0, 0, width, height);

          canvas.toBlob(
            (blob) => {
              const compressedFile = new File([blob], file.name, {
                type: 'image/jpeg',
                lastModified: Date.now()
              });
              console.log(`ğŸ“¸ ${file.name}: ${(file.size / 1024 / 1024).toFixed(2)}MB â†’ ${(compressedFile.size / 1024 / 1024).toFixed(2)}MB`);
              resolve(compressedFile);
            },
            'image/jpeg',
            quality
          );
        };
        img.src = e.target.result;
      };
      reader.readAsDataURL(file);
    });
  }

  document.addEventListener('change', async function(e) {
    if (e.target && e.target.id === 'photo-upload-input') {
      const input = e.target;
      const zone = document.getElementById('image-preview-zone');

      const loader = document.createElement('div');
      loader.className = 'text-center text-violet-600 font-bold animate-pulse my-4';
      loader.textContent = 'ğŸ”„ Compression des images...';
      zone.appendChild(loader);

      const newFiles = Array.from(input.files);
      const compressedFiles = await Promise.all(
        newFiles.map(file => compressImage(file))
      );

      loader.remove();

      compressedFiles.forEach(file => {
        const isDuplicate = allFiles.some(f => f.name === file.name && f.size === file.size);
        if (!isDuplicate) {
          allFiles.push(file);
        }
      });

      const dataTransfer = new DataTransfer();
      allFiles.forEach(file => dataTransfer.items.add(file));
      input.files = dataTransfer.files;

      zone.innerHTML = '';
      allFiles.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = function(event) {
          const wrapper = document.createElement('div');
          wrapper.className = "relative group";

          const img = document.createElement('img');
          img.src = event.target.result;
          img.className = "h-28 w-28 object-cover rounded-2xl border-4 border-white shadow-xl rotate-3 hover:rotate-0 transition-transform duration-300 shadow-slate-200";

          const sizeBadge = document.createElement('div');
          const sizeMB = (file.size / 1024 / 1024).toFixed(1);
          sizeBadge.className = "absolute -top-1 -left-1 bg-green-500 text-white text-xs px-2 py-0.5 rounded-full font-bold";
          sizeBadge.textContent = `${sizeMB}MB`;

          const deleteBtn = document.createElement('button');
          deleteBtn.type = 'button';
          deleteBtn.innerHTML = 'Ã—';
          deleteBtn.className = "absolute -top-2 -right-2 w-8 h-8 bg-red-500 text-white rounded-full font-bold opacity-0 group-hover:opacity-100 transition-opacity hover:bg-red-600 z-10";
          deleteBtn.onclick = function() {
            allFiles.splice(index, 1);
            const dt = new DataTransfer();
            allFiles.forEach(f => dt.items.add(f));
            input.files = dt.files;
            wrapper.remove();
            if (allFiles.length > 0) {
              zone.innerHTML = '';
              input.dispatchEvent(new Event('change'));
            }
          };

          wrapper.appendChild(sizeBadge);
          wrapper.appendChild(img);
          wrapper.appendChild(deleteBtn);
          zone.appendChild(wrapper);
        }
        reader.readAsDataURL(file);
      });
    }
  });
</script>
