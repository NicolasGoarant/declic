<!-- app/views/layouts/admin.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Admin · Déclic</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <style>
    body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Inter,Arial,sans-serif;margin:0;background:#fafafa;color:#0f172a}
    header{position:sticky;top:0;background:#111827;color:#fff;padding:10px 16px;z-index:10}
    header a{color:#fff;text-decoration:none;margin-right:12px}
    .container{max-width:1200px;margin:0 auto;padding:16px}
    .toolbar{display:flex;gap:10px;align-items:center;flex-wrap:wrap;margin:12px 0}
    .table{width:100%;border-collapse:collapse;background:#fff;border:1px solid #e5e7eb}
    .table th,.table td{font-size:14px;border-bottom:1px solid #e5e7eb;padding:8px 10px;vertical-align:top}
    .muted{color:#64748b}
    .badge{display:inline-block;padding:2px 8px;border-radius:999px;font-size:12px;background:#eef2ff}
    .btn{display:inline-block;background:#111827;color:#fff;border:none;border-radius:8px;padding:7px 12px;text-decoration:none;cursor:pointer}
    .btn.secondary{background:#e5e7eb;color:#111827}
    .btn.danger{background:#dc2626}
    input[type="text"], select{padding:6px 8px;border:1px solid #e5e7eb;border-radius:6px}
    .actions{display:flex;gap:8px}
  </style>
</head>
<body>
  <header>
    <div class="container">
      <strong>Admin Déclic</strong>
      <span class="muted">—</span>
      <%= link_to "Opportunités", admin_opportunities_path %>
    </div>
  </header>
  <div class="container">
    <% if notice %><p class="muted"><%= notice %></p><% end %>
    <% if alert  %><p style="color:#b91c1c"><%= alert %></p><% end %>
    <%= yield %>
  </div>
</body>
</html>
