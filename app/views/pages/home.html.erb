<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function () {
  if (!window.L) return;

  const map = L.map('map').setView([46.6, 2.2], 6);
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '¬© OpenStreetMap contributors'
  }).addTo(map);

  // --- Icones SVG par cat√©gorie ---
  const ICONS = {
    benevolat:    { bg:'#ef4444', emoji:'‚ù§Ô∏è' },
    formation:    { bg:'#3b82f6', emoji:'üìò' },
    rencontres:   { bg:'#10b981', emoji:'üë•' },
    entreprendre: { bg:'#f59e0b', emoji:'üíº' }
  };

  function pinIcon(cat='formation') {
    const {bg, emoji} = ICONS[cat] || {bg:'#6366f1', emoji:'üìç'};
    const svg = `
      <svg xmlns="http://www.w3.org/2000/svg" width="36" height="48" viewBox="0 0 36 48">
        <defs>
          <filter id="s" x="-20%" y="-20%" width="140%" height="140%">
            <feDropShadow dx="0" dy="2" stdDeviation="2" flood-color="rgba(0,0,0,.25)"/>
          </filter>
        </defs>
        <g filter="url(#s)">
          <path d="M18 46s14-14 14-26A14 14 0 1 0 4 20c0 12 14 26 14 26z" fill="${bg}"/>
          <circle cx="18" cy="18" r="10" fill="white" />
          <text x="18" y="22" font-size="12" text-anchor="middle"> ${emoji} </text>
        </g>
      </svg>`;
    return L.divIcon({
      html: svg,
      iconSize: [36, 48],
      iconAnchor: [18, 46],
      className: 'declic-pin'
    });
  }

  // --- Cluster group ---
  const clusters = L.markerClusterGroup({
    maxClusterRadius: 45,
    showCoverageOnHover: false
  }).addTo(map);

  // Position Paris par d√©faut, sinon localStorage
  const params = new URLSearchParams(location.search);
  const lat  = params.get('lat')  || null;
  const lng  = params.get('lng')  || null;
  const q    = params.get('q')    || '';
  const cat  = params.get('category') || '';
  const radius = params.get('radius') || 25;

  const url = new URL('/api/v1/opportunities', location.origin);
  if (lat && lng) { url.searchParams.set('lat', lat); url.searchParams.set('lng', lng); }
  if (q)   url.searchParams.set('q', q);
  if (cat) url.searchParams.set('category', cat);
  url.searchParams.set('radius', radius);

  fetch(url)
    .then(r => r.json())
    .then(({data}) => {
      const bounds = [];
      data.forEach(o => {
        if (!o.latitude || !o.longitude) return;
        const m = L.marker([o.latitude, o.longitude], { icon: pinIcon(o.category) })
          .bindPopup(`
            <div class="p-1" style="min-width:220px">
              <div class="mb-1"><span class="text-[11px] px-2 py-0.5 rounded-full bg-gray-100">${(o.category||'').charAt(0).toUpperCase()+o.category.slice(1)}</span></div>
              <strong>${o.title}</strong><br/>
              <small>${o.organization||''} ‚Äî ${o.location||''}</small>
              <p style="margin:6px 0">${(o.description||'').slice(0,110)}...</p>
              <a class="text-indigo-600 underline text-sm" href="/opportunities/${o.id}">Voir la fiche</a>
            </div>
          `);
        clusters.addLayer(m);
        bounds.push([o.latitude, o.longitude]);
      });
      if (bounds.length) map.fitBounds(bounds, { padding: [30,30] });
    })
    .catch(e => console.error(e));
});
</script>




