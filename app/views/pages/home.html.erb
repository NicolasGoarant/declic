    const id = btn.getAttribute('data-toggle');
    const s  = document.getElementById('t-short-'+id);
    const f  = document.getElementById('t-full-'+id);
    if (!s || !f) return;
    const expanded = !f.classList.contains('hidden');
    if (expanded) {
