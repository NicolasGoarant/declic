<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
(function () {
  // Fabrique une ic√¥ne "pin" SVG encod√©e en data URI
  function pinIcon(hex) {
    const svg =
`<svg xmlns="http://www.w3.org/2000/svg" width="32" height="42" viewBox="0 0 32 42">
  <path d="M16 41s-9-12.2-9-19A9 9 0 1 1 25 22c0 6.8-9 19-9 19z"
        fill="${hex}" stroke="white" stroke-width="2"/>
  <circle cx="16" cy="16" r="5" fill="white"/>
</svg>`;
    return L.icon({
      iconUrl: "data:image/svg+xml;utf8," + encodeURIComponent(svg),
      iconSize:  [28, 42],
      iconAnchor:[14, 41],
      popupAnchor:[0, -36]
    });
  }

  function init() {
    const mapEl = document.getElementById('map');
    if (!mapEl || !window.L) return;

    const map = L.map('map', { zoomControl: true }).setView([46.6, 2.2], 6);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '¬© OpenStreetMap contributors'
    }).addTo(map);

    fetch('/api/v1/opportunities')
      .then(r => r.json())
      .then(items => {
        const group = L.layerGroup().addTo(map);
        const bounds = [];

        const palette = {
          benevolat:   '#ef4444', // rouge
          formation:   '#3b82f6', // bleu
          rencontres:  '#10b981', // vert
          entreprendre:'#f59e0b'  // orange
        };

        items.forEach(o => {
          const lat = parseFloat(o.latitude), lng = parseFloat(o.longitude);
          if (!Number.isFinite(lat) || !Number.isFinite(lng)) return;

          const color = palette[o.category] || '#6366f1';
          const marker = L.marker([lat, lng], { icon: pinIcon(color) }).addTo(group);

          marker.bindPopup(
            `<div style="min-width:230px">
               <div style="margin-bottom:6px">
                 <span style="font-size:11px;padding:2px 6px;border-radius:9999px;background:#f1f5f9;color:#111;">
                   ${String(o.category||'').replace(/^./, c => c.toUpperCase())}
                 </span>
               </div>
               <strong>${o.title||''}</strong><br/>
               <small>${o.organization||''}</small>
               <p style="margin:.5rem 0">${(o.description||'').slice(0,110)}...</p>
               <a href="/opportunities/${o.id}" class="text-indigo-600 underline text-sm">Voir la fiche</a>
             </div>`
          );

          bounds.push([lat, lng]);
        });

        if (bounds.length) map.fitBounds(bounds, { padding: [30,30] });
      })
      .catch(e => console.error('Erreur chargement opportunit√©s:', e));
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>



