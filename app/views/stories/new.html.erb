<%# app/views/stories/new.html.erb %>

<div class="bg-gray-50 min-h-screen font-sans text-slate-800">
  <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-10">

    <div class="mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-extrabold tracking-tight text-slate-900 font-epilogue">
          Proposer un témoignage
        </h1>
        <p class="mt-2 text-slate-600">
          Partagez votre parcours de vie ou votre reconversion.
          Elle sera relue par l'équipe avant publication.
        </p>
      </div>
      <%= link_to "← Annuler", stories_path, class: "text-sm font-semibold text-slate-500 hover:text-slate-800 transition-colors" %>
    </div>

    <% if @story.errors.any? %>
      <div class=\"rounded-xl border border-red-200 bg-red-50 p-4 mb-8\">
        <div class=\"flex\">
          <div class=\"shrink-0 text-red-400\">⚠️</div>
          <div class=\"ml-3\">
            <h3 class=\"text-sm font-medium text-red-800\">
              Merci de corriger les <%= pluralize(@story.errors.count, "erreur") %> :
            </h3>
            <ul class=\"mt-2 list-disc list-inside text-sm text-red-700\">
              <% @story.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
      <div class="lg:col-span-2">
        <%= form_with model: @story, local: true, class: "space-y-8 bg-white p-8 rounded-3xl shadow-sm border border-slate-200" do |f| %>

          <div class="space-y-6">
            <div>
              <%= f.label :name, "Votre Nom ou Pseudo", class: "block text-sm font-bold text-slate-700 mb-1" %>
              <%= f.text_field :name, placeholder: "Ex: Marie-Louise G.", class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" %>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= f.label :email, "Votre email (Obligatoire)", class: "block text-sm font-bold text-slate-700 mb-1" %>
                <%= f.email_field :email, required: true, placeholder: "votre@email.com", class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" %>
              </div>
              <div>
                <%= f.label :phone, "Téléphone", class: "block text-sm font-bold text-slate-700 mb-1" %>
                <%= f.text_field :phone, placeholder: "06 00 00 00 00", class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" %>
              </div>
            </div>

            <div>
              <%= f.label :address, "Adresse postale (Optionnel)", class: "block text-sm font-bold text-slate-700 mb-1" %>
              <%= f.text_field :address, placeholder: "Rue, Ville, Code Postal", class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" %>
            </div>

            <div>
              <%= f.label :title, "Le titre de votre histoire", class: "block text-sm font-bold text-slate-700 mb-1" %>
              <%= f.text_field :title, placeholder: "Ex: Ma nouvelle vie de maraîchère", class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" %>
            </div>

            <div>
              <%= f.label :chapo, "En quelques mots (chapeau)", class: "block text-sm font-bold text-slate-700 mb-1" %>
              <%= f.text_area :chapo, rows: 3, placeholder: "Un résumé court pour accrocher le lecteur...", class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" %>
            </div>

            <div>
              <%= f.label :content, "Racontez votre Déclic", class: "block text-sm font-bold text-slate-700 mb-1" %>
              <%= f.text_area :content, rows: 10, placeholder: "Votre parcours, vos défis, votre réussite...", class: "w-full rounded-xl border-slate-200 focus:border-violet-500 focus:ring-violet-500 shadow-sm" %>
            </div>

            <div class="field">
              <%= f.label :photos, "Ajouter une photo", class: "block text-sm font-bold text-slate-700 mb-1" %>
              <%= f.file_field :photos, multiple: true, id: "photo-upload-input", class: "block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-violet-50 file:text-violet-700 hover:file:bg-violet-100" %>
              <div id="image-preview-zone" class="mt-4 flex flex-wrap gap-2"></div>
            </div>
          </div>

          <div class="pt-6 border-t border-slate-100">
            <%= f.submit "Valider et envoyer à Déclic", class: "w-full flex justify-center py-4 px-6 border border-transparent rounded-full shadow-lg text-lg font-bold text-white bg-gradient-to-r from-violet-600 to-indigo-600 hover:from-violet-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500 transition-all transform hover:-translate-y-1" %>
          </div>
        <% end %>
      </div>

      <div class="space-y-6">
        <div class="bg-white p-6 rounded-3xl shadow-sm border border-slate-200">
          <h3 class="font-bold text-slate-900 mb-4">Conseils de rédaction</h3>
          <ul class="text-sm text-slate-600 space-y-3">
            <li class="flex gap-2">
              <span class="text-violet-500 font-bold">•</span>
              <span>Concentrez-vous sur le moment où vous avez eu le "Déclic".</span>
            </li>
            <li class="flex gap-2">
              <span class="text-violet-500 font-bold">•</span>
              <span>Partagez un conseil pratique pour ceux qui voudraient suivre votre voie.</span>
            </li>
            <li class="flex gap-2">
              <span class="text-violet-500 font-bold">•</span>
              <span>Une photo de vous en action rend l'histoire beaucoup plus humaine !</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </main>
</div>

<script>
  document.addEventListener('change', function(e) {
    if (e.target && e.target.id === 'photo-upload-input') {
      const zone = document.getElementById('image-preview-zone');
      zone.innerHTML = '';
      Array.from(e.target.files).forEach(file => {
        const reader = new FileReader();
        reader.onload = function(event) {
          const img = document.createElement('img');
          img.src = event.target.result;
          img.className = "h-20 w-20 object-cover rounded-lg border border-slate-200 shadow-sm";
          zone.appendChild(img);
        }
        reader.readAsDataURL(file);
      });
    }
  });
</script>
