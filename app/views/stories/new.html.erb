            <%= f.text_field :city, required: true, placeholder: "Nancy", class: "w-full rounded-2xl border-slate-200 focus:ring-4 focus:ring-violet-500/10 focus:border-violet-500 transition-all p-4" %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
          <div class="field">
            <%= f.label :address, "Adresse (Obligatoire)", class: "block text-sm font-bold text-slate-700 mb-2" %>
            <%= f.text_field :address, required: true, placeholder: "Ex: 3 rue de la R√©publique", class: "w-full rounded-2xl border-slate-200 focus:ring-4 focus:ring-violet-500/10 focus:border-violet-500 transition-all p-4" %>
          </div>
          <div class="field">
