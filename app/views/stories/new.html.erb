<%# app/views/stories/new.html.erb %>

<div class="bg-slate-50 min-h-screen font-sans text-slate-900 pb-20 animate-in fade-in duration-700">
  <%# Header avec animation %>
  <div class="bg-white border-b border-slate-200 mb-10 py-12 slide-in-from-top-4 animate-in duration-500">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <div class="inline-block px-4 py-1.5 mb-4 text-xs font-bold tracking-widest text-violet-600 uppercase bg-violet-50 rounded-full">
        ‚ú® Partager mon parcours
      </div>
      <h1 class="text-4xl md:text-5xl font-black tracking-tight font-epilogue italic mb-4">
        Racontez votre <span class="text-transparent bg-clip-text bg-gradient-to-r from-violet-600 to-indigo-600">D√©clic</span>
      </h1>
      <p class="text-slate-500 text-lg max-w-xl mx-auto">
        Votre exp√©rience peut devenir l'√©tincelle qui inspirera d'autres personnes. ‚ö°
      </p>
    </div>
  </div>

  <%# Container restreint pour le Desktop %>
  <main class="max-w-3xl mx-auto px-6 slide-in-from-bottom-4 animate-in duration-700 fill-mode-both">
    <%= form_with model: @story, local: true, class: "space-y-8" do |f| %>

      <% if @story.errors.any? %>
        <div class="rounded-2xl border border-red-200 bg-red-50 p-6 mb-8">
          <h3 class="text-sm font-bold text-red-800 mb-2">Oups ! Quelques corrections n√©cessaires :</h3>
          <ul class="list-disc list-inside text-sm text-red-700">
            <% @story.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%# Section 1 : Identit√© %>
      <section class="bg-white p-8 rounded-[2rem] shadow-sm border border-slate-100 transition-all hover:shadow-md">
        <h2 class="text-xl font-bold mb-6 flex items-center gap-3">
          <span class="flex items-center justify-center w-8 h-8 rounded-full bg-slate-900 text-white text-sm">1</span>
          Qui √™tes-vous ? üòâ
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="field">
            <%= f.label :name, "Votre Nom ou Pseudo", class: "block text-sm font-bold text-slate-700 mb-2" %>
            <%= f.text_field :name, placeholder: "Marie-Louise G.", class: "w-full rounded-2xl border-slate-200 focus:ring-4 focus:ring-violet-500/10 focus:border-violet-500 transition-all p-4" %>
          </div>
          <div class="field">
            <%= f.label :email, "Email (Obligatoire)", class: "block text-sm font-bold text-slate-700 mb-2" %>
            <%= f.email_field :email, required: true, placeholder: "votre@email.com", class: "w-full rounded-2xl border-slate-200 focus:ring-4 focus:ring-violet-500/10 focus:border-violet-500 transition-all p-4" %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
          <div class="field">
            <%= f.label :phone, "T√©l√©phone", class: "block text-sm font-bold text-slate-700 mb-2" %>
            <%= f.text_field :phone, placeholder: "06 00 00 00 00", class: "w-full rounded-2xl border-slate-200 focus:ring-4 focus:ring-violet-500/10 focus:border-violet-500 transition-all p-4" %>
          </div>
          <div class="field">
            <%= f.label :address, "Ville ou Adresse (Optionnel)", class: "block text-sm font-bold text-slate-700 mb-2" %>
            <%= f.text_field :address, placeholder: "Ex: Nancy üá´üá∑", class: "w-full rounded-2xl border-slate-200 focus:ring-4 focus:ring-violet-500/10 focus:border-violet-500 transition-all p-4" %>
          </div>
        </div>
      </section>

      <%# Section 2 : R√©cit %>
      <section class="bg-white p-8 rounded-[2rem] shadow-sm border border-slate-100 transition-all hover:shadow-md">
        <h2 class="text-xl font-bold mb-6 flex items-center gap-3">
          <span class="flex items-center justify-center w-8 h-8 rounded-full bg-slate-900 text-white text-sm">2</span>
          Votre Histoire üìñ
        </h2>

        <div class="space-y-6">
          <div>
            <%= f.label :title, "Titre de votre t√©moignage", class: "block text-sm font-bold text-slate-700 mb-2" %>
            <%= f.text_field :title, placeholder: "Le jour o√π j'ai tout plaqu√© pour...", class: "w-full text-lg font-bold rounded-2xl border-slate-200 focus:ring-4 focus:ring-violet-500/10 focus:border-violet-500 p-4" %>
          </div>

          <div>
            <%= f.label :chapo, "R√©sum√© court (Chapeau)", class: "block text-sm font-bold text-slate-700 mb-2" %>
            <%= f.text_area :chapo, rows: 2, placeholder: "Une br√®ve introduction...", class: "w-full rounded-2xl border-slate-200 focus:ring-4 focus:ring-violet-500/10 focus:border-violet-500 p-4 italic text-slate-600" %>
          </div>

          <div>
            <%= f.label :content, "Votre D√©clic en d√©tails", class: "block text-sm font-bold text-slate-700 mb-2" %>
            <%= f.text_area :content, rows: 10, placeholder: "D√©crivez votre parcours, vos doutes et vos r√©ussites...", class: "w-full rounded-2xl border-slate-200 focus:ring-4 focus:ring-violet-500/10 focus:border-violet-500 p-4 leading-relaxed" %>
          </div>
        </div>
      </section>

      <%# Section 3 : Photo %>
      <section class="bg-white p-8 rounded-[2rem] shadow-sm border border-slate-100 transition-all hover:shadow-md">
        <h2 class="text-xl font-bold mb-2 flex items-center gap-3">
          <span class="flex items-center justify-center w-8 h-8 rounded-full bg-slate-900 text-white text-sm">3</span>
          L'image üì∏
        </h2>
        <p class="text-slate-500 text-sm mb-6 italic">Une photo pour donner vie √† votre r√©cit.</p>

        <div class="field">
          <label class="flex flex-col items-center justify-center w-full h-32 border-2 border-slate-200 border-dashed rounded-3xl cursor-pointer bg-slate-50 hover:bg-violet-50 hover:border-violet-300 transition-all">
            <div class="flex flex-col items-center justify-center pt-5 pb-6">
              <span class="text-2xl mb-1">üìÅ</span>
              <p class="text-sm text-slate-600 font-bold">S√©lectionner une ou plusieurs photos</p>
              <p class="text-xs text-slate-400 mt-1">Vous pouvez ajouter des photos en plusieurs fois</p>
            </div>
            <%= f.file_field :photos, multiple: true, id: "photo-upload-input", class: "hidden" %>
          </label>
          <div id="image-preview-zone" class="mt-6 flex flex-wrap gap-4 justify-center"></div>
        </div>
      </section>

      <%# Bouton de validation optimis√© pour le mobile %>
      <div class="pt-6">
        <%= f.submit "üöÄ Valider et envoyer mon t√©moignage",
            class: "w-full py-5 px-4 md:px-8 rounded-full text-lg md:text-xl font-black text-white bg-slate-900 hover:bg-violet-600 shadow-2xl shadow-violet-200 transition-all transform hover:-translate-y-1 cursor-pointer whitespace-normal break-words leading-tight" %>
        <p class="text-center text-slate-400 text-[10px] md:text-xs mt-6 uppercase tracking-widest font-bold">
          ‚ù§Ô∏è Transmis avec bienveillance √† l'√©quipe D√©clic
        </p>
      </div>

    <% end %>
  </main>
</div>

<script>
  // Garder un cumul de tous les fichiers s√©lectionn√©s
  let allFiles = [];

  document.addEventListener('change', function(e) {
    if (e.target && e.target.id === 'photo-upload-input') {
      const input = e.target;
      const zone = document.getElementById('image-preview-zone');

      // Ajouter les nouveaux fichiers au cumul (sans doublons)
      const newFiles = Array.from(input.files);
      newFiles.forEach(file => {
        // V√©rifier si le fichier n'est pas d√©j√† pr√©sent (bas√© sur nom + taille)
        const isDuplicate = allFiles.some(f => f.name === file.name && f.size === file.size);
        if (!isDuplicate) {
          allFiles.push(file);
        }
      });

      // Mettre √† jour l'input avec TOUS les fichiers
      const dataTransfer = new DataTransfer();
      allFiles.forEach(file => dataTransfer.items.add(file));
      input.files = dataTransfer.files;

      // R√©afficher TOUTES les previews
      zone.innerHTML = '';
      allFiles.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = function(event) {
          const wrapper = document.createElement('div');
          wrapper.className = "relative group";

          const img = document.createElement('img');
          img.src = event.target.result;
          img.className = "h-28 w-28 object-cover rounded-2xl border-4 border-white shadow-xl rotate-3 hover:rotate-0 transition-transform duration-300 shadow-slate-200";

          // Bouton pour supprimer une photo
          const deleteBtn = document.createElement('button');
          deleteBtn.type = 'button';
          deleteBtn.innerHTML = '√ó';
          deleteBtn.className = "absolute -top-2 -right-2 w-8 h-8 bg-red-500 text-white rounded-full font-bold opacity-0 group-hover:opacity-100 transition-opacity hover:bg-red-600";
          deleteBtn.onclick = function() {
            // Retirer ce fichier du cumul
            allFiles.splice(index, 1);

            // Mettre √† jour l'input
            const dt = new DataTransfer();
            allFiles.forEach(f => dt.items.add(f));
            input.files = dt.files;

            // Retirer visuellement
            wrapper.remove();

            // Si plus de fichiers, recr√©er la preview compl√®te pour r√©indexer
            if (allFiles.length > 0) {
              zone.innerHTML = '';
              input.dispatchEvent(new Event('change'));
            }
          };

          wrapper.appendChild(img);
          wrapper.appendChild(deleteBtn);
          zone.appendChild(wrapper);
        }
        reader.readAsDataURL(file);
      });
    }
  });
</script>
